
require(phangorn)

phymlPath = '~/Downloads/PhyML-3.1/PhyML-3.1_macOS-MountainLion'

phymlOptions = ' -m gtr -a e -i '

file_name = '1.phy'

phyml_command = paste0(phymlPath, phymlOptions, file_name)

system(phyml_command)

output_stats <- readLines(paste0(file_name, '_phyml_stats.txt'))
output_tree <- read.tree(paste0(file_name, '_phyml_tree.txt'))

# get mean node support, 
#95%node support, 
#tree length, 
#ml tree, 
#gtr matrix, 
#shape of gamma, 
#pi, 
#likelihood
#unconstrained likelihood
#delta

meanNodeSupport <- mean(as.numeric(output_tree$node.label), na.rm = T)

